<div class="panel panel-default">
    <div class="panel-heading">
        <h4>{{question.question_title}}</h4>
    </div>
    <div class="panel-body">
            {% for i,answer in question.answer %}
                {{set i = i  + 1 }}
                <label class="input-group">
                    <span class="input-group-addon">{{i}}:</span>
                    <div class="form-control">{{answer.answer}}</div>
                </label>
            {% endfor %}
    </div>
    <div class="panel-footer">
        <form action="{{path('', exam.id)}}" method="get">
            <input type="hidden" name="edit_id" value="{{question.id}}">
            <button class="btn btn-info" type="submit">Edytuj</button>
        </form>
        <form action="{{path('apiExamQuestionDestroy', exam.id)}}" method="post">
            {# {{csrf_field()}} #}
            {{method_field('DELETE')}}
            <input type="hidden" name="question_id" value="{{question.id}}">

            <button style="position: relative;bottom: 35px;" class="btn btn-danger pull-right" type="submit">Usu≈Ñ</button>
        </form>

    </div>
</div>